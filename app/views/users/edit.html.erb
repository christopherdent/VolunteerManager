<div class="container d-flex flex-column align-items-center justify-content-center" style="min-height: 92vh;">
  <div class="card p-4 shadow-lg" style="max-width: 500px; width: 100%; border-radius: 24px; background: rgba(40,42,60,0.98); color: #fff;">
    <div class="card-body">
      <h1 class="mb-4 text-center" style="color:#7f9cf5;">Edit Profile</h1>

 

      <%= form_for @user, html: { multipart: true } do |f| %>
        <div class="mb-3">
          <%= f.label :first_name, nil, class: "form-label text-white" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :last_name, nil, class: "form-label text-white" %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :email, nil, class: "form-label text-white" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :username, nil, class: "form-label text-white" %>
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, nil, class: "form-label text-white" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
        </div>
        <% if current_user&.admin? %>
          <div class="mb-3 form-check">
            <%= f.check_box :admin, class: "form-check-input" %>
            <%= f.label :admin, "Admin?", class: "form-check-label text-white" %>
          </div>
          <div class="mb-3">
            <%= f.label :avatar, nil, class: "form-label text-white" %>
            <%= f.file_field :avatar, class: "form-control" %>
          </div>
        <% end %>
        <div class="d-grid gap-2 mt-4">
          <%= f.submit "Update User", class: "btn btn-primary btn-lg w-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
