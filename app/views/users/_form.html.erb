<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="form-errors">
    <h4 class = "error"><%= pluralize(@user.errors.count, "error") %></h4>
        <% @user.errors.full_messages.each do |msg| %>
        <ul class = "error"><li><%= msg %></li></ul>
        <% end %>
        </div>
        <%end%>

<%= f.label :first_name %>
<%= f.text_field :first_name %>
<br>
<%= f.label :last_name %>
<%= f.text_field :last_name %>
<br>
<%= f.label :email %>
<%= f.email_field :email %>
<br>
<%= f.label :username %>
<%= f.text_field :username %>
<br>
<%= f.label :password %>
<%= f.password_field :password, value: @user.password if @user %>
<br>
<% if current_user %>
<% if current_user.admin %>
<%= f.label :admin?  %>
<%= f.check_box :admin %>
<% end %>
<br>
<%= f.label :avatar  %>
<%= f.file_field :avatar %>
<% end %>
<br><br>
<%= f.submit %>
<br>
<% end %>
