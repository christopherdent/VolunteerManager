<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
  <div class="card p-4 shadow-lg" style="min-width: 360px; background: #20232a; color: #fff;">
    <div class="card-body">
      <h1 class="mb-4 text-center" style="color:#6379e6;">New User Sign Up</h1>
      <p class="text-center mb-4" style="color: #bbb;">Create your account below:</p>

      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h5><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h5>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for @user, html: { multipart: true } do |f| %>
        <div class="mb-3">
          <%= f.label :first_name, nil, class: "form-label" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :last_name, nil, class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :email, nil, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :username, nil, class: "form-label" %>
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, nil, class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <% if current_user&.admin? %>
          <div class="mb-3 form-check">
            <%= f.check_box :admin, class: "form-check-input" %>
            <%= f.label :admin, "Admin?", class: "form-check-label" %>
          </div>
          <div class="mb-3">
            <%= f.label :avatar, nil, class: "form-label" %>
            <%= f.file_field :avatar, class: "form-control" %>
          </div>
        <% end %>

        <div class="d-grid gap-2">
          <%= f.submit "Sign Up", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <p class="small text-light">Already have an account?
          <%= link_to 'Login', login_path, class: "text-info" %>
        </p>
      </div>
    </div>
  </div>
</div>
