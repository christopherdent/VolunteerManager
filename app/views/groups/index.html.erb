<div class="jumbotron text-center">
  <h1>Active Groups</h1>
  <small><%= link_to 'Add a Group', new_group_path %></small>
  </div>

<br>
<% @groups.each do |group| %>
<ul class = "list-group list-group-flush">
<li class = "list-group-item"> <%= link_to group.name, group %></li>
<% end %>


<br>
<div class="jumbotron text-center">
<h3>Inactive Groups</h3><br>
</div>

<% Group.inactive.sort_by(&:name).each do |group| %>
<ul class = "list-group list-group-flush">
<li class = "list-group-item"><%= link_to group.program_name, group %> <%= link_to group.name, group %></li>
<% end %>
