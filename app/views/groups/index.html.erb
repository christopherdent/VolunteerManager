<div class="jumbotron text-center">
  <h1>Active Groups</h1>
  </div>

<%= link_to 'Add a Group', new_group_path %>
<br> <br>  <br>
<% Group.active.sort_by(&:name).each do |group| %>
  <%= group.program_name %> <%= group.name %> <%if current_user.admin? %><%= link_to '[View]', group %> <%= link_to '[Edit]', edit_group_path(group) %><%end%><br>
<% end %>


<br>
<div class="jumbotron text-center">
<h3>Inactive Groups</h3><br>
</div>

<% Group.inactive.sort_by(&:name).each do |group| %>
  <%= group.program_name %> <%= group.name %> <%if current_user.admin? %><%= link_to '[View]', group %> <%= link_to '[Edit]', edit_group_path(group) %><%end%><br>
<% end %>
