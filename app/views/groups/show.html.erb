<div class="jumbotron text-center">

  <h1><%= @group.name %></h1>
</div>
<p>Group Type: <%= @group.kind %></p>
<p>Program:  <%= @group.program_name %></p>
<p>Chairperson:  <%= @group.chair_first %> <%= @group.chair_last %> </p>
<p>Status:  <%= "Active" if @group.status == true %></p>

<%= link_to 'Edit Group Details', edit_group_path(@group) %>
<br><br>
Group Members:
<br><br>
<ul>
<% @group.volunteers.uniq.sort_by(&:last_name).each do |member| %>
 
<li><%= link_to member.full_name, volunteer_path(member) %> <%= button_to "Remove", remove_from_group_group_volunteer_path(@group, member), :method => :delete%> </li>

<% end  %>
</ul>
<br>
<div class="jumbotron text-center">
<center>
  <table style="width:75%">
  <tr>
    <th>Add Existing Volunteer to Group</th>
    <th>Add New Volunteer to Group</th>
  </tr>
  <tr><td>

<%= form_for(@group, url: {action: "update_two"}, method: :patch) do |f| %>

<%= f.collection_select(:volunteer_ids, Volunteer.all, :id, :full_name, {:include_blank => true} ) %><br><br><br><br>
<%= f.submit "Add" %>
<%end%>
  </td>

   <td>

<%= form_for @group do |f| %>
<%= f.fields_for :volunteers, @group.volunteers.build do |volunteers_fields| %>
<%= f.label "First Name" %>
   <%= volunteers_fields.text_field :first_name %><br>
<%= f.label "Last Name" %>
   <%= volunteers_fields.text_field :last_name %><br>
<%= f.label "Email" %>
   <%= volunteers_fields.email_field :email %><br>
 <%= f.label :organization %>
   <%= volunteers_fields.text_field :organization %><br>
 <%= f.label :sector %>
   <%= volunteers_fields.select :sector, [[], ['Government'], ['Industry'], ['Academia']] %><br>
 <%= f.label :active? %>
   <%= volunteers_fields.check_box :active_status %><br>
 <%= f.hidden_field :user_id, :value => current_user.id %>
   <br>
  <%= f.submit "Add"%>
<% end %>
<% end %>
</td></tr></table></center></div>

<br><br>

<%= button_to "Delete Group", group_path(@group), method: :delete, data: { confirm: "Really?" } %>
