<h1>Edit Statement of Expertise</h1>


<%= form_for @group_volunteer do |f| %>

<h4> Statement for: <%= @volunteer.full_name %> </h4>
<p> For the:  <%= f.collection_select :group_id, @groups, :id, :name %><br><br>
  <%= f.label :statement_of_expertise %><br>
  <%= f.text_area :statement, :cols => 50, :rows => 10 %><br>
  <%= f.hidden_field :volunteer_id, :value => @volunteer.id %>
  <%= f.hidden_field :id, :value => @group_volunteer.id %>
<br>

<%= f.submit "Update SOE" %>

<br>

<% end %>
