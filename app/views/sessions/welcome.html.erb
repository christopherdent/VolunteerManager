
  <% if !logged_in? %>
    <%= image_tag("logo.png", class: "img-fluid mb-4", alt: "VolunteerManager logo") %>

    <h1 class="mb-3 text-center">Welcome to Association Volunteer Manager</h1>
    <p class="lead mb-4 text-center">Organize your volunteer teams effortlessly.</p>

    <% if flash[:alert] %>
      <div class="alert alert-info w-100 text-center"><%= flash[:alert] %></div>
    <% end %>

    <div class="d-flex gap-3 mb-3">
      <%= link_to "Login", login_path, class: "btn btn-primary btn-lg" %>
      <%= link_to "Signup", signup_path, class: "btn btn-outline-primary btn-lg" %>
    </div>

    <small class="text-muted text-center">Here for a quick demo? Login with <strong>guest/guest</strong>.</small>

  <% else %>

    <h1 class="mb-4 text-center">Hi, <%= current_user.first_name %>! What would you like to do?</h1>

    <% if flash[:alert] %>
      <div class="alert alert-info w-100 text-center"><%= flash[:alert] %></div>
    <% end %>

    <ul class="list-group mb-4 text-start" style="max-width: 400px;">
      <li class="list-group-item text-center"><%= link_to 'Add a Volunteer', new_volunteer_path %></li>
      <li class="list-group-item text-center"><%= link_to 'View All Volunteers', volunteers_path %></li>
      <li class="list-group-item text-center"><%= link_to 'Create a Group', new_group_path %></li>
      <li class="list-group-item text-center"><%= link_to 'View All Groups', groups_path %></li>
      <li class="list-group-item text-center"><%= link_to 'View Statements of Expertise', group_volunteers_path %></li>
      <li class="list-group-item text-center"><%= link_to 'View/Edit System Users', users_path %></li>
    </ul>

  <% end %>

