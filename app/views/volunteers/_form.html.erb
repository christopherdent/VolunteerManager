
<%= form_for @volunteer, method: :post do |f| %>

<% if @volunteer.errors.any? %>
  <div class="form-errors">
  <h4 class = "error"><%= pluralize(@volunteer.errors.count, "error") %> stopped you from creating this volunteer:</h4>
      <% @volunteer.errors.full_messages.each do |msg| %>
      <ul class = "error"><li><%= msg %></li></ul>
      <% end %>
      </div>
      <%end%>

<%= f.label :first_name %>
<%= f.text_field :first_name %>
<br>
<%= f.label :last_name %>
<%= f.text_field :last_name %>
<br>
<%= f.label :email %>
<%= f.email_field :email %>
<br>
<%= f.label :organization %>
<%= f.text_field :organization %>
<br>
<%= f.label :sector %>
<%= f.select :sector, [[], ['Government'], ['Industry'], ['Academia']] %>
<br>
<%= f.label :active? %>
<%= f.check_box :active_status  %>
<br>
<%= f.label :upload_cv %>
<%= f.file_field :cv %>
<br>
<%= f.hidden_field :user_id, :value => current_user.id %>
<br>
<% if Group.all != [] %>

<%= f.label "Add to Group?" %><br>
<%= f.collection_select :group_ids, Group.all, :id, :name, include_blank: "None" %>
<% end %>
<br><br><br>
<%= f.submit %>
<br>
<% end %>
