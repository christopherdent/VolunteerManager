<div class="card shadow-sm rounded p-4 bg-light">
  <h2 class="mb-4">New Volunteer</h2>

  <%= form_for @volunteer, method: :post, html: { class: "needs-validation" } do |f| %>

    <% if @volunteer.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading"><%= pluralize(@volunteer.errors.count, "error") %> prevented this volunteer from being created:</h4>
        <ul>
          <% @volunteer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :first_name, class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :last_name, class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :organization, class: "form-label" %>
      <%= f.text_field :organization, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :sector, class: "form-label" %>
      <%= f.select :sector, [['Government'], ['Industry'], ['Academia']], { include_blank: true }, class: "form-select" %>
    </div>

    <div class="form-check mb-3">
      <%= f.check_box :active_status, class: "form-check-input", id: "volunteer_active_status" %>
      <%= f.label :active_status, "Active?", class: "form-check-label" %>
    </div>

    <div class="mb-3">
      <%= f.label :cv, "Upload CV", class: "form-label" %>
      <%= f.file_field :cv, class: "form-control" %>
    </div>

    <%= f.hidden_field :user_id, value: current_user.id %>

    <% if Group.any? %>
      <div class="mb-3">
        <%= f.label :group_ids, "Add to Group?", class: "form-label" %>
        <%= f.collection_select :group_ids, Group.all, :id, :name, { include_blank: "None" }, class: "form-select" %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= f.submit "Create Volunteer", class: "btn btn-primary w-100" %>
    </div>

  <% end %>
</div>
