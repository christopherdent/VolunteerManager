
<div class="jumbotron text-center">
<h1>All Volunteers</h1>
<small><%= link_to 'Add a Volunteer', new_volunteer_path %></small>
</div>

<div class="text-left">

  <h4>Filter by group: <%= @group.name if @group %></h4>
  <%= form_tag("/volunteers", method: "get") do %>
    <%= select_tag "group", options_from_collection_for_select(Group.all, "id", "name"), include_blank: true %>

    <%= submit_tag "Filter", class: "btn btn-info" %>
  <% end %>
  </div>


<br><br>
<% @volunteers.uniq.sort_by(&:last_name).each do |volunteer| %>
<ul class = "list-group list-group-flush">
<li class="list-group-item"><%= link_to volunteer.full_name, volunteer%></li>
</ul>

<% end %>
