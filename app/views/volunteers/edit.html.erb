<div class="card shadow-sm rounded p-4 bg-light">
  <h2 class="mb-4">Edit Volunteer</h2>

  <% if @volunteer.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(@volunteer.errors.count, "error") %> prevented this volunteer from being updated:</h4>
      <ul>
        <% @volunteer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for @volunteer, method: :patch, html: { class: "needs-validation" } do |f| %>

    <div class="mb-3">
      <%= f.label :first_name, class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :last_name, class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :organization, class: "form-label" %>
      <%= f.text_field :organization, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :sector, class: "form-label" %>
      <%= f.select :sector, [['Government'], ['Industry'], ['Academia']], { include_blank: true }, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= f.label :cv, "Upload CV", class: "form-label" %>
      <%= f.file_field :cv, class: "form-control" %>
    </div>

    <div class="form-check mb-3">
      <%= f.check_box :active_status, class: "form-check-input", id: "volunteer_active_status" %>
      <%= f.label :active_status, "Active?", class: "form-check-label" %>
    </div>

    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="mt-4">
      <%= f.submit "Update Volunteer", class: "btn btn-primary w-100" %>
    </div>

  <% end %>
</div>
